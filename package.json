  "description": "MicroserviÃ§o SSH para Server Manager App",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npm run clean && tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t ssh-microservice .",
    "docker:run": "docker run -p 3000:3000 ssh-microservice",
    "prepare": "husky install"
  },
  "keywords": [
    "ssh",
