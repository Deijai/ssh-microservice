    "@types/crypto-js": "^4.2.1",
    "@types/uuid": "^9.0.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.15",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
